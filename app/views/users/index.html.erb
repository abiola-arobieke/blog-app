<h1>Users </h1>
<p>Here is a list of user of all user</p>
<ul>
  <% @users.each do |user| %>
    <%= link_to user do %>
      <li>
        <div class="user-information">
          <h2><%= user.name %></h2>
          <p>Number of posts: <%= user.posts_counter || 0 %></p>
        </div>
      </li>
      <% end %>
  <% end %>
</ul>

