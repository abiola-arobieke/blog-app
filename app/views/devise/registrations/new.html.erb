<h2 class="d-flex center">Sign up</h2>

<div class="middle m-33 p-2 wrap">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class:"form-title" %>
    </div>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, required: true, autocomplete: "name", class:"form-title" %>
    </div>

    <div class="field">
      <%= f.label :bio %><br />
      <%= f.text_area :bio, autofocus: true, required: true, autocomplete: "bio", size: "5x10" %>
    </div>

    <div class="field">
      <%= f.label :image_url %><br />
      <%= f.text_field :photo, autofocus: true, required: true, autocomplete: "photo", class:"form-title" %>
    </div>

    <div class="field">
      <%= f.label :password%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", required: true, class:"form-title" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class:"form-title" %>
    </div>

    <div class="actions m-100 txt-center">
      <%= f.submit "Sign up", class: "btn middle" %>
    </div>
  <% end %>
</div>

<div class="d-flex center mt-1 column">
  <%= render "devise/shared/links" %>
</div>
